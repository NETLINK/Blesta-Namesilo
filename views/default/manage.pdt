        <?php
        $link_buttons[] = ['name' => $this->_('Namesilo.add_module_row', true), 'attributes' => ['href' => $this->base_uri . 'settings/company/modules/addrow/' . $module->id]];

        $this->Widget->clear();
        $this->Widget->setLinkButtons($link_buttons);

        $this->Widget->create($this->_('AdminCompanyModules.manage.boxtitle_manage', true, $this->Html->_($module->name, true)), ['id' => 'manage_namesilo']);
        ?>

        <div class="title_row first">
            <h3><?php $this->_('Namesilo.manage.module_rows_title'); ?></h3>
        </div>
        <?php
        $num_rows = count($this->Html->ifSet($module->rows));
        if ($num_rows > 0) {
            ?>
            <table class="table">
                <tr class="heading_row">
                    <td><span><?php $this->_('Namesilo.manage.module_rows_heading.user'); ?></span></td>
                    <td><span><?php $this->_('Namesilo.manage.module_rows_heading.key'); ?></span></td>
                    <td><span><?php $this->_('Namesilo.manage.module_rows_heading.sandbox'); ?></span></td>
                    <td><span><?php $this->_('Namesilo.manage.module_rows_heading.portfolio'); ?></span></td>
                    <td class="last"><span><?php $this->_('Namesilo.manage.module_rows_heading.options'); ?></span></td>
                </tr>
                <?php
                for ($i = 0; $i < $num_rows; $i++) {
                    ?>
                    <tr<?php echo ($i % 2 == 1) ? ' class="odd_row"' : ''; ?>>
                        <td><?php $this->Html->_($module->rows[$i]->meta->user); ?></td>
                        <td><?php $this->Html->_($module->rows[$i]->meta->key); ?></td>
                        <td><?php echo $this->_('Namesilo.row_meta.sandbox_' . $this->Html->ifSet($module->rows[$i]->meta->sandbox, 'false')); ?></td>
                        <td><?php $this->Html->_($module->rows[$i]->meta->portfolio); ?></td>
                        <td>
                            <a href="<?php echo $this->Html->safe($this->base_uri . 'settings/company/modules/editrow/' . $this->Html->ifSet($module->id) . '/' . $this->Html->ifSet($module->rows[$i]->id) . '/'); ?>"><?php $this->_('Namesilo.manage.module_rows.edit'); ?></a>
                            <?php
                            $this->Form->create($this->base_uri . 'settings/company/modules/deleterow/');
                            $this->Form->fieldHidden('id', $this->Html->ifSet($module->id));
                            $this->Form->fieldHidden('row_id', $this->Html->ifSet($module->rows[$i]->id));
                            ?>
                            <a href="<?php echo $this->Html->safe($this->base_uri . 'settings/company/modules/deleterow/' . $this->Html->ifSet($module->id) . '/' . $this->Html->ifSet($module->rows[$i]->id) . '/'); ?>" class="manage" rel="<?php echo $this->Html->safe($this->_('Namesilo.manage.module_rows.confirm_delete', true)); ?>"><?php $this->_('Namesilo.manage.module_rows.delete'); ?></a>
                            <?php
                            $this->Form->end();
                            ?>
                        </td>
                    </tr>
                    <?php
                }
                ?>
            </table>
            <?php
        } else {
            ?>
            <div class="empty_section">
                <div class="empty_box">
                        <?php $this->_('Namesilo.manage.module_rows_no_results');?>
                    </div>
            </div>
            <?php
        }
        ?>

        <?php
        $this->Widget->end();
        ?>

        <script type="text/javascript">
            $(document).ready(function () {
                $('#manage_namesilo a.manage[rel]').blestaModalConfirm({base_url: '<?php echo $this->base_uri;?>', close: '<?php $this->_('AppController.modal.text_close');?>', submit: true});
            });
        </script>